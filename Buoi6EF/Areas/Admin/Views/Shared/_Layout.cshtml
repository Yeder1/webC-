<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Hoang Anh</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Baitapthuchanh.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-secondary text-white text-center py-4">
        <h1>Quản lý</h1>
    </header>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container justify-content-center">

            <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">Trang Chủ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Product" asp-action="Add"><i class="fa-solid fa-plus"></i>Thêm Sản Phẩm</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Categories" asp-action="Index">Loại Hàng Hóa</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="TaiKhoans" asp-action="Index"><i class="fa-solid fa-plus"></i>Quản lý người dùng</a>
                    </li>
                </ul>
                <partial name ="_LoginPartial" />

               
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3">
                <div class="bg-black text-white p-3" style="position: relative;">
                    <h5>SOCIAL MEDIA</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" style="color: darkred;">Facebook</a></li>
                        <li><a href="#" style="color: green;">Linked</a></li>
                        <li><a href="#" style="color: orange;">Gmail</a></li>
                        <li><a href="#" style="color: blue;">Zalo</a></li>
                    </ul>
                    <!-- Hình động sẽ được chèn vào đây -->
                    <div class="animated-bg"></div>
                </div>
            </div>

            <style>
                .animated-bg {
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 50%;
                    height: 50%;
                    background-image: url('https://media.giphy.com/media/13hxeOYjoTWtK8/giphy.gif');
                    background-size: cover; /* Để hình ảnh cover phần nền */
                    background-repeat: no-repeat;
                    opacity: 0.5; /* Điều chỉnh độ trong suốt của hình ảnh */
                    z-index: -1; /* Để đảm bảo nền hình ảnh nằm dưới nội dung khác */
                    background-size: 300px 200px;
                }
            </style>




        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

