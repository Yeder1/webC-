@model IEnumerable<Buoi6EF.Models.Product>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 250px;">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Price: @product.Price</p>
                    <p class="card-text">Description: @product.Description</p>
                    <p class="card-text">Category: @product.Category?.Name</p>
                </div>
                <style>
                    .btn-hover {
                        transition: all 0.3s ease;
                    }

                        .btn-hover:hover {
                            transform: translateY(-3px);
                            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                        }

                    .card {
                        transition: transform 0.3s ease;
                    }

                        .card:hover {
                            transform: translateY(-5px);
                        }
                </style>

                <div class="card-footer d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href="@Url.Action("Display",  new { id = product.Id })" class="btn btn-sm btn-outline-primary btn-hover">View</a>
                        
                    </div>
                </div>
            </div>
        </div>
    }
</div>
